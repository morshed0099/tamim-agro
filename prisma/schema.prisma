generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
  id           String     @id @default(uuid())
  locationName String     @unique
  Customer     Customer[]
}

model Customer {
  id           String   @id @default(uuid())
  locationName String
  location     Location @relation(fields: [locationName], references: [locationName])
  name         String
  phoneNumber  String
  Farmtype     Custtype
  totalShed    Int
}

enum Custtype {
  Broiler
  Color
}
